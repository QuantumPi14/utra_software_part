# Gemini (via OpenRouter) - live commentary
GEMINI_API_KEY=...
GEMINI_MODEL=google/gemini-3-flash-preview

# ElevenLabs TTS
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE=josh

# Timer: key to start (backend detects this; not the browser)
TIMER_START_KEY=space

# Team number (set before each match; can also set via API)
TEAM_NUMBER=1

# Video source: camera index (0, 1, 2) or URL
VIDEO_SOURCE=0

# Optional: commentary pacing
# FILLER_INTERVAL_SEC=1  
# MAX_PAYLOADS_PER_CALL=3

# Optional: MongoDB Atlas (leaderboard persistence). If unset, leaderboard is in-memory only.
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
# MONGODB_DB_NAME=utra_match
# MONGODB_COLLECTION=matches
