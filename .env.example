# Gemini (via OpenRouter) - live commentary
GEMINI_API_KEY=...
GEMINI_MODEL=google/gemini-2.5-flash-lite

# ElevenLabs TTS
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE=josh

# Timer: key to start (backend detects this; not the browser)
TIMER_START_KEY=space

# Team number (set before each match; can also set via API)
TEAM_NUMBER=1

# Video source: camera index (0, 1, 2) or URL
VIDEO_SOURCE=0

# Optional: commentary pacing
# FILLER_INTERVAL_SEC=1  
# MAX_PAYLOADS_PER_CALL=3
